#for ((i=34;i<${#welcome_msg};i++));
        #do
                #echo -n "-"
        #done
echo -e "\n"
echo -e "  ${WHITE}Host    :: ${BLUE}${BOLD}$HOSTNAME${NOBOLD}"
echo -e "  ${WHITE}Kernel  :: ${BLUE}${BOLD}`uname -smr`${NOBOLD}"
echo -e "  ${WHITE}IP      :: ${BLUE}${BOLD}$ip_add${NOBOLD}${NC}"
echo -e "\n"


